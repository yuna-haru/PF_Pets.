<div class="container">
  <div class="row" style="margin: 50px 0;">
    <div class="col-xl-12">

      <div style="margin-bottom: 30px;">
        <h4 class="text-center">投稿一覧</h4>
      </div>

      <div class="d-flex justify-content-center">
        <table class="table">
          <thead>
            <tr>
              <th scope="col" class="text-nowrap font-weight-bold" style="width: 10%"><h6>投稿日時</h6></th>
              <th scope="col" class="text-nowrap font-weight-bold" style="width: 20%"><h6>ユーザーネーム</h6></th>
              <th scope="col" class="text-nowrap font-weight-bold" style="width: 30%"><h6>タイトル</h6></th>
          </tr>
          </thead>
          <tbody>
            <% @post_images.each do |post_image|%>
            <tr>
              <td class="px-3"><p><%= post_image.created_at.strftime('%Y/%m/%d') %></p></td>
              <td class="px-3"><p><%= link_to admin_user_path(post_image.user.id), class: "text-muted" do %>
                                    <%= post_image.user.name %>
                                  <% end %></p></td>
              <td class="px-3"><p><%= link_to admin_post_image_path(post_image.id), class: "text-muted" do %>
                                    <%= post_image.title %>
                                  <% end %></p></td>
            </tr>
            <% end %>
            <%= paginate @post_images %>
          </tbody>
        </table>
      </div>

    </div>
  </div>
</div>