<div class="container">
  <div class="row">
    <div class="mx-auto col-xl-11">

      <div>
        <h2>ユーザー一覧</h2>
      </div>

      <div>
        <table class="mt-3">
          <thead class="border bg-light mt-3">
            <tr class="block">
              <th class="px-3 text-nowrap font-weight-bold" style="width: 10%"><h6>会員ID</h6></th>
              <th class="px-3 text-nowrap font-weight-bold" style="width: 20%"><h6>ユーザーネーム</h6></th>
              <th class="px-3 text-nowrap font-weight-bold" style="width: 30%"><h6>メールアドレス</h6></th>
              <th class="px-3 text-nowrap font-weight-bold" style="width: 30%"><h6>ステータス</h6></th>
          </tr>
          </thead>
          <tbody>
            <% @user.each do |user|%>
            <tr>
              <td class="px-3"><p><%= user.id %></p></td>
              <td class="px-3"><p><%= link_to admin_user_path(user.id) do %>
                                  <%= user.name %>
                                  <% end %></p></td>
              <td class="px-3"><p><%= user.email %></p></td>
              <td class="px-3"><p><% if user.is_deleted %></p>
                                  <p class="text-muted">退会</p>
                                  <% else %>
                                  <p class="text-success">有効</p>
                                  <% end %></td>
            </tr>
            <% end %>
            <%= paginate @user %>
          </tbody>
        </table>
      </div>

    </div>
  </div>
</div>