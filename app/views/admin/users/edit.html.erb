<div class="container">
  <div class="row" style="margin: 50px 0;">
    <div class="col-md-12">

      <div style="margin-bottom: 30px;">
        <h4 class="text-center"><%= @user.name %>さんの詳細</h4>
      </div>

      <div class="d-flex justify-content-center">

        <%= form_with model: @user, url: admin_user_path(@user.id) do |f| %>
          <span style="margin-right: 100px;">会員ID</span>
          <span style="margin-bottom: 20px;"><%= @user.id %></span><br>

          <span><label for="name", style="margin-bottom: 20px;">ユーザーネーム</label></span>
          <%= f.text_field :name, id:"name", style: "margin-left: 30px;" %><br>

          <span><label for="email", style="margin-bottom: 20px;">メールアドレス</label></span>
          <%= f.text_field :email, id:"email", style: "margin-left: 30px;"%><br>

          <span style="margin-bottom: 20px; margin-right: 30px;">会員ステータス</span>
          <%= f.label :is_deleted, '有効', value: FALSE, for:"status_f" %>
          <%= f.radio_button :is_deleted, 'false', id:"status_f", style: "margin-left: 10px;" %>
          <%= f.label :is_deleted, '退会', value: TRUE, for:"status" %>
          <%= f.radio_button :is_deleted, 'true', id:"status", style: "margin-left: 10px;" %><br>

          <span class="d-flex justify-content-center"><%= f.submit '変更を保存', class: "btn btn-outline-success" %></span>

        <% end %>

      </div>

      </div>
  </div>
</div>