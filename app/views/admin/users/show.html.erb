<div class="container">
  <div class="row" style="margin: 50px 0;">
    <div class="col-md-12">

      <div style="margin-bottom: 30px;">
        <h4 class="text-center"><%= @user.name %>さんの詳細</h4>
      </div>

      <div class="text-center">
        <table class="table">
          <tr><th scope="col">会員ID</th><td><%= @user.id %></td></tr>
          <tr><th scope="col">ユーザーネーム</th><td><%= @user.name %></td></tr>
          <tr><th scope="col">メールアドレス</th><td><%= @user.email %></td></tr>
          <tr><th scope="col">会員ステータス</th><td>
            <% if @user.is_deleted %>
              <span class="text-muted">退会</span>
            <% else %>
              <span class="text-success">有効</span>
            <% end %>
          </td></tr>
        </table>
        <div class="text-center">
          <span style="margin-right: 30px;">
            <%= link_to "編集", edit_admin_user_path(@user.id), class: "btn btn-outline-success" %>
          </span>
          <span><%= link_to "投稿一覧", post_images_admin_user_path(@user), class: "btn btn-outline-info" %></span>
        </div>
      </div>

    </div>
  </div>
</div>