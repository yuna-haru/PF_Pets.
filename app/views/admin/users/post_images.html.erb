<div class="container">
  <div class="row">
    <div class="mx-auto col-xl-11">

      <div>
        <h2><%= @user.name %>さんの投稿一覧</h2>
      </div>

      <div>
        <table class="mt-3">
          <thead class="border bg-light mt-3">
            <tr class="block">
              <th class="px-3 text-nowrap font-weight-bold" style="width: 10%"><h6>投稿日時</h6></th>
              <th class="px-3 text-nowrap font-weight-bold" style="width: 20%"><h6>タイトル</h6></th>
              <th class="px-3 text-nowrap font-weight-bold" style="width: 30%"><h6>本文</h6></th>
          </tr>
          </thead>
          <tbody>
            <% @post_images.each do |post_image|%>
            <tr>
              <td class="px-3"><p><%= post_image.created_at.strftime('%Y/%m/%d') %></p></td>
              <td class="px-3"><p><p><%= link_to admin_post_image_path(post_image.id) do %>
                                        <%= post_image.title %>
                                      <% end %></p></td>
              <td class="px-3"><p><%= post_image.body.truncate(20) %>
                                  <% if post_image.body.size >= 20 %>
                                    <%= link_to public_post_image_path(post_image.id) do %>
                                      <span>　続きを読む</span>
                                    <% end %>
                                  <% end %></p></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>

    </div>
  </div>
</div>