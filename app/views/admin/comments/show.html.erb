<div class="container">
  <div class="row m-50px">
    <div class="col-md-12">

      <div class="mb-30px">
        <h4 class="text-center"><%= @comment.user.name %>さんのコメント詳細</h4>
      </div>

      <div class="text-center">
        <table class="table">
          <tr><th scope="col">投稿日時</th><td><%= @comment.created_at.strftime('%Y/%m/%d') %></td></tr>
          <tr><th scope="col">ユーザーネーム</th><td><%= link_to admin_user_path(@comment.post_image.id), class: "text-muted" do %>
                                           <%= @comment.user.name %>
                                         <% end %></td></tr>
          <tr><th scope="col">コメントした投稿</th><td><%= link_to admin_post_image_path(@comment.post_image.id), class: "text-muted" do %>
                                             <%= @comment.post_image.title %>
                                           <% end %></td></tr>
          <tr><th scope="col">投稿内容</th><td><%= @comment.comment %></td></tr>
        </table>
        <span class="btn btn-outline-danger ">
          <%= link_to "削除する", admin_comment_path, method: :delete, data: { confirm: '本当に削除しますか?'}, class: "text-danger" %>
        </span>
      </div>



      </div>
  </div>
</div>