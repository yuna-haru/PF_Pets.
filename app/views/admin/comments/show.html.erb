<div class="container">
  <div class="row">
    <div class="mx-auto col-xl-11">

      <div>
        <h2><%= @comment.user.name %>さんのコメント詳細</h2>
      </div>

      <div>
        <table>
        <tr><th>投稿日時</th><td><%= @comment.created_at.strftime('%Y/%m/%d') %></td></tr>
        <tr><th>ユーザーネーム</th><td><%= link_to admin_user_path(@comment.post_image.id) do %>
                                         <%= @comment.user.name %>
                                       <% end %></td></tr>
        <tr><th>コメントした投稿</th><td><%= link_to admin_post_image_path(@comment.post_image.id) do %>
                                           <%= @comment.post_image.title %>
                                         <% end %></td></tr>
        <tr><th>投稿内容</th><td><%= @comment.comment %></td></tr>
      </table>
      </div>

      <span><%= link_to "削除する", admin_comment_path, method: :delete, data: { confirm: '本当に削除しますか?'} %></span>

      </div>
  </div>
</div>