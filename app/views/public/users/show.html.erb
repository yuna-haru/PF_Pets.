<div class="container">
  <div class="row" style="margin: 50px 0;">

    <div class="col-md-3">
      <%= render 'profile', user: @user %>
    </div>

    <div class="col-md-8">
      <div style="margin-bottom: 20px;" class="border-bottom">
        <h4 class="text-center">投稿一覧</h4>
      </div>

        <div style="margin-top: 5px;">
          <% @post_images.each do |post_image| %>
            <div style="margin-bottom: 20px;" class="border-bottom">
              <span style="margin-right: 20px;">
                <%= link_to public_post_image_path(post_image.id) do %>
                  <%= image_tag post_image.get_image(100,100) %>
                <% end %>
              </span>
              <span style="margin-right: 20px;"><%= link_to post_image.title, public_post_image_path(post_image.id), class: "text-muted" %></span>
              <span style="margin-right: 20px;"><%= post_image.created_at.strftime('%Y/%m/%d') %></span>
              <span><%= post_image.comments.count %></span>
              <span><%= post_image.bookmarks.count %></span>
            </div>
          <% end %>
        </div>

      <%= paginate @post_images %>

    </div>
  </div>
</div>