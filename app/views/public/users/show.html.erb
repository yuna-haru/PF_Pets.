<div>
  <div>
    <div>

      <div>

        <div>
          <h4>プロフィール</h4>
        </div>

        <div>
          <div><%= image_tag @user.get_profile_image(100,100) %></div>
          <div><%= @user.name %></div>
          <div><%= @user.introduction %></div>
          <div>
            <% if @user == current_user %>
              <%= link_to "プロフィール編集", edit_public_user_path(@user.id) %>
            <% end %>
          </div>

          <div>
            <div>
              <%= link_to "新規投稿", new_public_post_image_path %>
            </div>
            <div>
              ブックマーク
            </div>
          </div>
        </div>

        <div>
          <div>
            <h4>投稿一覧</h4>
          </div>

          <% @post_images.each do |post_image| %>
          <div>
            <span><%= link_to post_image.title, public_post_image_path(post_image.id) %></span>
            <span><%= post_image.created_at.strftime('%Y/%m/%d') %></span>
            <span>
              <%= link_to public_post_image_path(post_image.id) do %>
                <%= image_tag post_image.get_image(100,100) %>
              <% end %>
            </span>
          </div>
          <% end %>
        </div>

      </div>

    </div>
  </div>
</div>