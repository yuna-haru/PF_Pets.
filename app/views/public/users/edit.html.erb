<div>
  <div>
    <div>

      <div>

        <div>
          <h4>プロフィール編集</h4>
        </div>

        <div>
          <%= form_with model: @user, url: public_user_path(@user.id) do |f| %>

          <div>
            <label for="image">プロフィール画像</label>
            <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
          </div>
          <div>
            <div>
              <label for="name">ユーザーネーム</label>
              <%= f.text_field :name, id:"name" %>
            </div>
            <div>
              <label for="email">メールアドレス</label>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", id:"email" %>
            </div>
            <div>
              <label for="introduction">自己紹介</label>
              <%= f.text_area :introduction, id:"introduction", style: "height:100px;" %>
            </div>
          </div>
          <div>
            <span><%= f.submit '変更を保存' %></span>
            <span>退会する</span>
          </div>

          <% end %>
        </div>

      </div>
  </div>
</div>