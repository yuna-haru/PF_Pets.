<div class="container">
  <div class="row" style="margin: 50px 0;">
    <div class="col-xl-12">

      <div style="margin-bottom: 30px;" class="border-bottom">
          <h4 class="text-center">プロフィール編集</h4>
        </div>

        <div class="text-center">
        <% if @user.errors.any? %>
          <%= @user.errors.count %>件のエラーが発生しました
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
      </div>

        <div class="d-flex justify-content-center">
          <%= form_with model: @user, url: public_user_path(@user.id) do |f| %>

          <div>
            <label for="image", style="margin-bottom: 20px;">プロフィール画像</label>
            <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*", id:"image", style: "margin-left: 20px;" %>
          </div>
          <div>
            <div>
              <label for="name", style="margin-bottom: 20px;">ユーザーネーム</label>
              <%= f.text_field :name, id:"name", style: "margin-left: 36px;" %>
            </div>
            <div>
              <label for="email", style="margin-bottom: 20px;">メールアドレス</label>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", id:"email", style: "margin-left: 36px;" %>
            </div>
            <div>
              <label for="introduction", style="margin-bottom: 20px;">自己紹介</label>
              <%= f.text_area :introduction, id:"introduction", size: "24×40;", style: "margin-left: 84px;" %>
            </div>
          </div>
          <div class="text-center">
            <span style="margin-right: 30px;">
              <%= f.submit '変更を保存',  class: "btn btn-outline-success" %>
            </span>
            <span class="btn btn-outline-danger">
              <%= link_to "退会する", public_users_confirm_path, class: "text-danger" %>
            </span>
          </div>

          <% end %>
        </div>

      </div>
  </div>
</div>